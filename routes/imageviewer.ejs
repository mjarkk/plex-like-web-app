<div class="img-viewer-vue" style="display: none;" v-bind:style="{display: show}">
  <div class="mainviewer">
    <!-- this layer will hold the acual image -->
    <div class="layer1 layer">
      <div class="img" v-bind:class="{show: showlayer[0]}" v-bind:style="{ backgroundImage: 'url(' + layer1 + ')' }"></div>
    </div>
    <div class="layer2 layer">
      <div class="img" v-bind:class="{show: showlayer[1]}" v-bind:style="{ backgroundImage: 'url(' + layer2 + ')' }"></div>
    </div>
    <div class="layer3 layer">
      <div class="img" v-bind:class="{show: showlayer[2]}" v-bind:style="{ backgroundImage: 'url(' + layer3 + ')' }"></div>
    </div>
  </div>
  <div class="options">
    <!-- this layer contains all image options and next images surgestions -->
    <div class="nextbtn"></div>
    <div class="prevbtn"></div>
    <div class="backbtn" v-on:click="closeimgviewer()">
      <svg fill="#fff" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
        <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
        <path d="M0 0h24v24H0z" fill="none"/>
      </svg>
    </div>
    <div class="rest">

    </div>
  </div>
</div>
